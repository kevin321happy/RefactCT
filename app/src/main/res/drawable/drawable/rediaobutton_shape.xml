<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape >
            <solid android:color="#1C84C1"/>
            <stroke android:width="1px" android:color="@color/mycourse_text_blue"/>

        </shape>
    </item>
    <item android:state_checked="false">
        <shape >
            <solid android:color="@color/white"/>
            <stroke android:width="1dip" android:color="@color/mycourse_text_blue"/>
        </shape>
    </item>

</selector>
