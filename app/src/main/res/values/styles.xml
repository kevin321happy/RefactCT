<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>
        <!-- Customize your theme here. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!--MD风格的对话框的样式-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--对话框按钮文字颜色-->
        <item name="colorAccent">@color/title_color</item>
        <!--对话框内容文字颜色-->
        <item name="android:textColorPrimary">@color/text_defaulttext</item>
        <!--对话框背景色-->
        <item name="android:background">@color/white</item>
    </style>
    <!--轮播图-->
    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px_space_450</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">@color/transparent</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/bga_banner_selector_point_hollow</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">20dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|right</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">10sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@drawable/binner</item>
    </style>

    <style name="style_ll_course_class_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/px_space_40</item>
    </style>


    <style name="style_iv_title_left">
        <item name="android:layout_width">@dimen/px_space_30</item>
        <item name="android:layout_height">@dimen/px_space_30</item>
    </style>

    <style name="style_tv_course_class_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/px_space_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/px_space_50</item>
    </style>

    <style name="style_iv_title_right">
        <item name="android:layout_width">@dimen/px_space_30</item>
        <item name="android:layout_height">@dimen/px_space_30</item>
    </style>

    <style name="style_icon_more">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginBottom">@dimen/px_space_20</item>
        <item name="android:layout_marginTop">@dimen/px_space_90</item>
        <item name="android:padding">@dimen/px_space_30</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_height">wrap_content</item>
    </style>




</resources>
