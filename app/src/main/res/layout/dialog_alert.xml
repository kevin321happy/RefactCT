<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="750px"
                                     android:layout_height="wrap_content"
                                     android:layout_gravity="center"
                                     android:background="@drawable/shape_alert_bg"
                                     android:orientation="vertical"
                                     android:paddingBottom="@dimen/px_space_25"
                                     android:paddingLeft="@dimen/px_space_5"
                                     android:paddingRight="@dimen/px_space_5"
                                     android:paddingTop="@dimen/px_space_25">

    <TextView
        android:id="@+id/alert_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="消息不符合，请重新填写！"
        android:textColor="@color/main_text_color"
        android:textSize="42px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/devider_color_gray_for_alert"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alert_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_left_button"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_666"
            android:textSize="50px"/>

        <View
            android:id="@+id/alert_space"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/devider_color_gray_for_alert"/>

        <TextView
            android:id="@+id/alert_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_right_button"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/title_color"
            android:textSize="50px"/>
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
