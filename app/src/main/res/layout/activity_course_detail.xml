<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <include layout="@layout/toolbar_layout"/>


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_space_550"
            android:visibility="visible">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/ic_course_watermark"
                android:visibility="visible"/>
            <com.wh.jxd.com.refactorqm.view.widget.CourseVedioPlay
                android:id="@+id/CustomGSYVideoPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTintMode="screen"/>
            <FrameLayout
                android:id="@+id/fl_mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_tvBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_image"
                    android:visibility="visible"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_black_85"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <Button
                        android:id="@+id/btn_start_study"
                        android:layout_width="@dimen/px_space_250"
                        android:layout_height="@dimen/px_space_100"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_btn_start_study"
                        android:text="开始学习"
                        android:textColor="@color/title_color"/>
                    <TextView
                        android:id="@+id/tv_study_chaptername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_space_20"
                        android:text="即刻加入学习"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/title_color"
            app:tabIndicatorHeight="@dimen/px_space_4"
            app:tabSelectedTextColor="@color/title_color"
            app:tabTextAppearance="@style/style_tabLayout_text"
            app:tabTextColor="@color/color_999"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_space_1"
            android:background="@color/line_gary"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"/>
    </LinearLayout>
</LinearLayout>