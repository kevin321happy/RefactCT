<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:id="@+id/ll_updatepwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/px_space_25"
        android:background="@drawable/bt_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_space_25"
        android:paddingRight="@dimen/px_space_25">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_100"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_space_25"
            android:text="修改密码"
            android:textColor="@color/grgray"/>

        <ImageView
            android:layout_width="@dimen/px_space_37"
            android:layout_height="@dimen/px_space_37"
            android:layout_marginLeft="@dimen/px_space_25"
            android:src="@drawable/icon_more"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gary"/>

    <LinearLayout
        android:id="@+id/ll_change_phone_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_100"
        android:layout_marginTop="@dimen/px_space_25"
        android:background="@drawable/bt_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_space_25"
        android:paddingRight="@dimen/px_space_25">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_100"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_space_25"
            android:singleLine="true"
            android:text="更换手机号"
            android:textColor="@color/grgray"/>

        <TextView
            android:id="@+id/tv_old_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/color_999"
            android:textSize="@dimen/px_space_24"/>

        <ImageView
            android:layout_width="@dimen/px_space_37"
            android:layout_height="@dimen/px_space_37"
            android:layout_marginLeft="@dimen/px_space_25"
            android:src="@drawable/icon_more"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gary"/>

    <LinearLayout
        android:id="@+id/ll_cleanCash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_100"
        android:background="@drawable/bt_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_100"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_space_25"
            android:text="清除缓存"
            android:textColor="@color/grgray"/>

        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_space_100"
            android:gravity="center_vertical"
            android:text="200M"
            android:textColor="@color/grgray"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gary"/>

    <LinearLayout
        android:id="@+id/ll_update_app"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_100"
        android:background="@drawable/bt_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_space_25"
        android:paddingRight="@dimen/px_space_25"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_100"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_space_25"
            android:text="检查更新"
            android:textColor="@color/grgray"/>

        <TextView
            android:id="@+id/tv_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本 ：1.22"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_score"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_100"
        android:background="@drawable/bt_click_selector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_space_25"
        android:paddingRight="@dimen/px_space_25"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_space_100"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_space_25"
            android:text="评分"
            android:textColor="@color/grgray"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gary"/>

    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_100"
        android:background="@drawable/bt_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_space_25"
        android:paddingRight="@dimen/px_space_25">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_100"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_space_25"
            android:text="意见反馈"
            android:textColor="@color/grgray"/>

        <ImageView
            android:layout_width="@dimen/px_space_37"
            android:layout_height="@dimen/px_space_37"
            android:layout_marginLeft="@dimen/px_space_25"
            android:src="@drawable/icon_more"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gary"/>

    <LinearLayout
        android:id="@+id/ll_aboutapp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_100"
        android:background="@drawable/bt_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_space_25"
        android:paddingRight="@dimen/px_space_25">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_100"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_space_25"
            android:text="关于我们"
            android:textColor="@color/grgray"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="@dimen/px_space_37"
            android:layout_height="@dimen/px_space_37"
            android:layout_marginLeft="@dimen/px_space_25"
            android:src="@drawable/icon_more"/>
    </LinearLayout>

</LinearLayout>