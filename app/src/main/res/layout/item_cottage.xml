<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="200px"
			  android:layout_height="wrap_content"
			  android:gravity="center"
			  android:orientation="vertical"
			  android:padding="@dimen/px_space_25"
			  android:background="@color/white"
	>
	<ImageView
		android:id="@+id/iv_new"
		android:layout_width="@dimen/px_space_30"
		android:layout_height="@dimen/px_space_20"
		android:visibility="invisible"
		android:layout_gravity="right"
		android:src="@drawable/ic_new_course"/>
	<com.wh.jxd.com.refactorqm.view.widget.CircleImageView
		android:id="@+id/iv_image"
		android:layout_width="@dimen/px_space_100"
		android:layout_height="@dimen/px_space_100"
		/>
	<TextView
		android:layout_marginTop="@dimen/px_space_20"
		android:id="@+id/tv_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:gravity="center_vertical"
		android:singleLine="true"
		android:textColor="@color/enterprise_act__defaulttext"
		android:textSize="@dimen/px_space_40"
		/>
</LinearLayout>
