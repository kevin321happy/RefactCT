<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_recent_study"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bt_click_selector"
    android:gravity="center_vertical">
    <View
        android:id="@+id/view_division"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/px_space_25"
        android:background="@color/green_dan" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_140"
        android:layout_marginLeft="@dimen/px_space_25"
        android:layout_marginRight="@dimen/px_space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/px_space_50"
            android:layout_height="@dimen/px_space_50"
            android:src="@drawable/ic_recent_study" />
        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_space_25"
            android:text="最近学习"
            android:textColor="@color/grgray"
            android:textSize="@dimen/px_space_40" />
    </LinearLayout>
</LinearLayout>